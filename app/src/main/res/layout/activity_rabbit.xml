<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omonom">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="151dp"
        android:background="@drawable/buttonapka"
        android:layout_height="90dp"
        android:text="@string/dalej"
        android:id="@+id/buttonRabbit"
        android:onClick="onButtonOpenSnake"
        android:layout_gravity="right" />

    <ImageView
        android:layout_width="316dp"
        android:layout_height="386dp"
        android:id="@+id/imageViewRabbit"
        android:src="@drawable/krolik"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/pigi" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/editTextRabbit"
        android:layout_weight="0.76"
        android:imeOptions="actionDone"
        android:hint="Wpisz tutaj tekst"
        android:singleLine="true"
        android:inputType="none" />

</LinearLayout>